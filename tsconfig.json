{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["es2015"],
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}